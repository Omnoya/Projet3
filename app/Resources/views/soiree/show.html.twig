{% extends 'base.html.twig' %}

{% block body %}
    <h1>Soiree</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ soiree.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ soiree.nom }}</td>
            </tr>
            <tr>
                <th>Descriptif</th>
                <td>{{ soiree.descriptif }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ soiree.photo }}</td>
            </tr>
            <tr>
                <th>Dateinvitation</th>
                <td>{% if soiree.dateInvitation %}{{ soiree.dateInvitation|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('soiree_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('soiree_edit', { 'id': soiree.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
